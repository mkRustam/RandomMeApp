<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/userListFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.mkr.randomuser.presentation.ui.main.MainFragment"
        android:label="Generate User" >
        <action
            android:id="@+id/action_mainFragment_to_userListFragment"
            app:destination="@id/userListFragment"
            app:popUpTo="@id/userListFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/userDetailsFragment"
        android:name="com.mkr.randomuser.presentation.ui.details.UserDetailsFragment"
        android:label="User Details" >
        <argument
            android:name="userId"
            app:argType="integer" />
    </fragment>

    <fragment
        android:id="@+id/userListFragment"
        android:name="com.mkr.randomuser.presentation.ui.list.UserListFragment"
        android:label="Users" >
        <action
            android:id="@+id/action_userListFragment_to_userDetailsFragment"
            app:destination="@id/userDetailsFragment" />
        <action
            android:id="@+id/action_userListFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment>

</navigation>